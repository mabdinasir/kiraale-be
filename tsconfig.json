{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,

    // Base URL and path mappings
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist", "eslint.config.js"]
}
